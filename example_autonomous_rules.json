[
  {
    "rule_id": "auto-alert-danger-zone",
    "name": "Alert on Danger Zone Entry",
    "description": "Automatically alert when any unit enters a danger/exclusion zone",
    "trigger_type": "geofence",
    "trigger_config": {
      "event": "entry",
      "zone_types": ["exclusion", "alert"]
    },
    "conditions": [
      {
        "type": "compare",
        "field": "zone_type",
        "operator": "in",
        "value": ["exclusion", "alert"]
      }
    ],
    "actions": [
      {
        "type": "log",
        "message": "ALERT: Unit entered danger zone!",
        "level": "warning"
      }
    ],
    "enabled": true,
    "priority": 9,
    "created_at": "2024-02-07T08:00:00.000Z",
    "last_triggered": null,
    "execution_count": 0
  },
  {
    "rule_id": "auto-status-base-return",
    "name": "Auto-Set Status on Base Entry",
    "description": "Automatically set unit status to BASE when entering safe zone",
    "trigger_type": "geofence",
    "trigger_config": {
      "event": "entry",
      "zone_types": ["safe"]
    },
    "conditions": [
      {
        "type": "compare",
        "field": "zone_type",
        "operator": "==",
        "value": "safe"
      }
    ],
    "actions": [
      {
        "type": "set_status",
        "status": "BASE"
      },
      {
        "type": "log",
        "message": "Unit returned to base - status updated",
        "level": "info"
      }
    ],
    "enabled": true,
    "priority": 7,
    "created_at": "2024-02-07T08:00:00.000Z",
    "last_triggered": null,
    "execution_count": 0
  },
  {
    "rule_id": "auto-status-active-deployment",
    "name": "Auto-Set Status on Base Exit",
    "description": "Automatically set unit status to AKTIV when leaving safe zone",
    "trigger_type": "geofence",
    "trigger_config": {
      "event": "exit",
      "zone_types": ["safe"]
    },
    "conditions": [
      {
        "type": "compare",
        "field": "zone_type",
        "operator": "==",
        "value": "safe"
      }
    ],
    "actions": [
      {
        "type": "set_status",
        "status": "AKTIV"
      },
      {
        "type": "log",
        "message": "Unit deployed from base - status updated",
        "level": "info"
      }
    ],
    "enabled": true,
    "priority": 7,
    "created_at": "2024-02-07T08:00:00.000Z",
    "last_triggered": null,
    "execution_count": 0
  },
